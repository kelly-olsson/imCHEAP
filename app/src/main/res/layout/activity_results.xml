<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3e8e5 ">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/resultsTitle"
        android:text="@string/resultsTitle"
        android:gravity="center"
        android:textColor="#2f8f9d"
        android:textSize="25sp">
    </TextView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ctnFragment"
        android:name="com.example.milkyway.ResultsFragment"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="50dp"
        tools:layout="@layout/fragment_results" />

    <Button
        android:id="@+id/resultsBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginStart="125dp"
        android:text="@string/resultsBack"
        android:backgroundTint="#2f8f9d"/>

</RelativeLayout>