<resources>
    <!-- Base application theme. -->
    <style name="Theme.MilkyWay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/poppins_regular</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sand</item>
        <item name="colorPrimaryVariant">@color/sand_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sand</item>
        <item name="colorSecondaryVariant">@color/sand_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sand_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MilkyWay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MilkyWay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MilkyWay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>